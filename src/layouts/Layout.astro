---
import 'src/styles/global.css'
import Footer from "@templates/Footer.astro";
import Header from "@templates/Header.astro";
export interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Bambuu Website">
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <link rel="apple-touch-icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body class="text-[1.4rem] md:text-[2rem]">
<Header/>
<main>
    <slot/>
</main>
<Footer/>
</body>
</html>

