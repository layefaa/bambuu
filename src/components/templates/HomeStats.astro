---
import {stats} from '@content/index.js'
import Stat from "@atoms/Stat.astro";
---

<div
        class='containerXPadding pt-[10rem] pb-[5rem] lg:py-0 gap-[5rem]  flex flex-col lg:flex-row items-center w-full'>
    <div class='w-full lg:w-1/2 lg:h-full '>
        <img src='/img/chair.png' alt="">
    </div>
    <div class='lg:w-1/2 lg:pl-[5rem] flex gap-[2rem] lg:gap-[4rem] flex-col'>
        <div class='bg-bb-light-brown px-[3rem] py-[2rem]'>
            <h2 class=' font-alika text-24 md:text-32 mb-[1rem]'>{stats.header}</h2>
            <p>{stats.paragraph}</p>
        </div>
        <div class='flex flex-wrap'>
            {
                stats.infos.map((i) =>
                        <Stat number={i.number} category={i.category}/>
                )
            }
        </div>
    </div>

</div>


