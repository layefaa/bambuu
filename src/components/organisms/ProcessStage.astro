---
import ProcessImage from '@molecules/ProcessImage.astro'
interface Props {
    format: string
    header: string
    paragraph: string
    margin: string
}

const {format, paragraph, header, margin} = Astro.props

const checkFormat = () => format === 'short'
---

<div class:list={["h-full w-full flex bg-bb-light-brown relative", {'flex-col': checkFormat()}]}>
    <div class:list={["w-full py-[2rem] pt-[5rem] pl-[3rem]", {'order-2 pt-[2rem] text-center px-[2rem]': checkFormat()}]}>
        <h4 class='text-24 mb-[3rem] md:text-36 font-alika'>{header}</h4>
        <p class='md:text-16 '>{paragraph}</p>
    </div>
    <div class:list={[`h-full aspect-[1/1] -mt-[${margin}]`, {'order-1 px-[2rem] h-[70%]': checkFormat()}]}>
        <ProcessImage/>
    </div>

</div>