---
import NavLinks from '@molecules/NavLinks.astro'
import { isMenuOpen } from '@store/index.ts'
import Socials from '@molecules/Socials.vue'
---

<div id='Nav'
		 class='md:hidden z-20 h-screen w-screen containerXPadding bg-bb-primary-white absolute top-0 left-0 grid-cols-4 grid-rows-6'>
	<div class='row-start-2 row-end-5 col-span-4 w-5/6 mx-auto'>
		<NavLinks classes='text-bb-tertiary-black text-48 gap-[6rem] font-[300]' />
	</div>
	<div class='row-start-6 col-span-4  w-5/6 mx-auto'>
		<p class='text-20 font-30 text-bb-quaternary-black mb-[1.5rem]'>Follow Us</p>
		<Socials />
	</div>

</div>

<script>
	import { isMenuOpen } from '@store/index.ts'

	isMenuOpen.subscribe(open => {
		if (open) document.getElementById('Nav').style.display = 'grid'
		else document.getElementById('Nav').style.display = 'none'
	})
</script>
